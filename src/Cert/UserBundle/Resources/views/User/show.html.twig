{% extends '::layoutiAdmin.html.twig' %}

{% block body -%}

    <h1 >Profile Compte</h1>
    <hr>
    <div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id </th>
                    <th>Nom </th>
                    <th>Prenom</th>
                    <th>Login</th>
                    <th>Telephone </th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.nom }}</td>
                    <td>{{ entity.prenom }}</td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.telephone }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                        <ul>
                            {% for role in entity.roles %}
                                <li>{{ role }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>
        
        <div class="form-group">
            <ul  class="actions">
                <li>
                    <a href="{{ path('admin_users') }}" 
                        class="btn   btn-warning">
                        <i class="fa fa-chevron-left"></i>
                        Retour sur la liste
                    </a>                        
                </li>
                <li>
                    <a href="{{ path('admin_users_edit', { 'id': entity.id }) }}" 
                        class="btn btn-primary">
                        <i class="fa fa-chevron-edit"></i>
                            Editer Compte
                    </a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        {{ form_widget(delete_form.submit, {'attr': {'class': "btn btn-danger icon-trash"} }) }}
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
