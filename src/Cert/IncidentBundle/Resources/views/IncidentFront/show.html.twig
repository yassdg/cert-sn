{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Incident</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ entity.categorie }}</td>
            </tr>
            <tr>
                <th>Datedeclaration</th>
                <td>{{ entity.dateDeclaration|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Traitee</th>
                <td>{{ entity.traitee }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('expert_incident') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('expert_incident_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
