{% extends '::layoutiAdmin.html.twig' %}

{% block body -%}
    <h1>Edition d'une Annonce </h1>
        <hr>
    <div class="col-md-6">
    	{{ form_start(edit_form,  {'attr': {'id': 'form_admin_edit'}} ) }}
    		<div> 
				{{ form_label(edit_form.titre) }}
				{{ form_errors(edit_form.titre) }}
				{{ form_widget(edit_form.titre) }}
    		</div>
    		<div> 
				{{ form_label(edit_form.source) }}
				{{ form_errors(edit_form.source) }}
				{{ form_widget(edit_form.source) }}
    		</div>
    		<div> 
				{{ form_label(edit_form.description) }}
				{{ form_errors(edit_form.description) }}
				{{ form_widget(edit_form.description) }}
    		</div>
    		<div> 
				{{ form_label(edit_form.dateAnnonce) }}
				{{ form_errors(edit_form.dateAnnonce) }}
				{{ form_widget(edit_form.dateAnnonce) }}
    		</div>
    		
    		
			{{ form_widget(edit_form.submit, {"attr": {"class":"display-none"}}) }}

    	{{ form_end(edit_form) }}

		<div class="form-group">
			<ul  class="actions">
				<li>
			        <a href="{{ path('admin_annonce') }}" 
			        	class="btn 	 btn-warning">
			        	<i class="fa fa-chevron-left"></i>
			            Retour sur la liste
			        </a>    					
				</li>
				<li>
					<button type="submit" 
							form="form_admin_edit" 
							value="Submit" 
							class="btn btn-primary">
							Editer
					</button>
				</li>
				<li>
    				{{ form_start(delete_form) }}
    					{{ form_widget(delete_form.submit, {'attr': {'class': "btn btn-danger"} }) }}
    				{{ form_end(delete_form) }}
				</li>
			</ul>
		</div>
    </div>

{% endblock %}
 