{% extends '::layoutiAdmin.html.twig' %}

{% block body -%}
    <h1>Annonce</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ entity.titre }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ entity.image }}</td>
                </tr>
                <tr>
                    <th>Source</th>
                    <td>{{ entity.source }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Dateannonce</th>
                    <td>{{ entity.dateAnnonce|date('d/m/Y') }}</td>
                </tr>
            </tbody>
        </table>
         <ul >
            <a href="{{ path('admin_annonce') }}" class="btn btn-sm btn-info">
                <i class="fa fa-2x fa-menu-left"></i>Retourner &aacute; la liste
            </a>
            <a href="{{ path('admin_annonce_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-info"><i class="fa fa-2x fa-edit"></i>Editer</a>
            {{ form(delete_form) }}
        </ul>
        
</div>
{% endblock %}

       