{% extends '::layoutiAdmin.html.twig' %}

{% block body -%}
    <h1>Articles list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Source</th>
                <th>Reference</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_articles_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.source }}</td>
                <td>{{ entity.reference }}</td>
                <td>{{ entity.image }}</td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.contenu }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_articles_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_articles_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_articles_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
