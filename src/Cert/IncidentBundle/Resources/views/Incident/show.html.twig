{% extends '::layoutiAdmin.html.twig' %}

{% block body -%}
    <h1>Incident</h1>
    <div class="col-lg-9">
        
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ entity.type }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Categorie</th>
                    <td>{{ entity.categorie }}</td>
                </tr>
                <tr>
                    <th>Datedeclaration</th>
                    <td>{{ entity.dateDeclaration|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Traitee</th>
                    <td>{{ entity.traitee }}</td>
                </tr>
            </tbody>
        </table>
        </div>
        <div class="form-group">
            <ul  class="actions">
                <li>
                    <a href="{{ path('expert_incident') }}" 
                        class="btn   btn-warning">
                        <i class="fa fa-chevron-left"></i>
                        Retour sur la liste
                    </a>                        
                </li>
            </ul>
        </div>
    
{% endblock %}

