        <a href="{{ path('admin_vulnerabilite_new') }}" class="btn btn-sm btn-success">
            <i class="fa fa-1x fa-plus"></i> Ajouter une vulnérabilité
        </a>
    </ul>

    <div class="col-lg-11">
        <table class="table table-bordered table-hover">
